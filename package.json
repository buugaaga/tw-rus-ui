{
  "name": "tw-rus-ui",
  "description": "библиотека компонентов для использования в nextjs приложениях применяя Tailwind CSS.",
  "version": "0.2.0",
  "license": "MIT",
  "author": {
    "name": "Eldar Nasyrov",
    "email": "ildar.nasrov@gmail.com"
  },
  "homepage": "https://github.com/buugaaga/tw-rus-ui/",
  "repository": {
    "url": "https://github.com/buugaaga/tw-rus-ui.git",
    "type": "git",
    "directory": "."
  },
  "bugs": {
    "url": "https://github.com/buugaaga/tw-rus-ui/issues"
  },
  "keywords": [
    "react",
    "reactjs",
    "tailwind",
    "nextjs",
    "ui-kit"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "rollup -c rollup.config.mjs",
    "dev": "yarn run build --watch",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "vitest run",
    "publish": "yarn publish"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.3",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest-axe": "^3.5.5",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.4",
    "eslint": "^8.48.0",
    "eslint-config-next": "^13.4.19",
    "eslint-config-prettier": "^8.10.0",
    "eslint-config-turbo": "^1.10.13",
    "eslint-plugin-react": "7.29.4",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.6.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.28.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-preserve-directives": "^0.2.0",
    "rollup-plugin-typescript-paths": "^1.4.0",
    "tsc-alias": "^1.8.7",
    "tslib": "^2.6.2",
    "typescript": "^4.9.5",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.28.5"
  },
  "dependencies": {
    "@floating-ui/react": "^0.24.8",
    "@floating-ui/react-dom": "^2.0.1",
    "@tailwindcss/forms": "^0.5.5",
    "class-variance-authority": "^0.4.0",
    "tailwind-merge": "^1.14.0",
    "tailwind-scrollbar": "^2.1.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
